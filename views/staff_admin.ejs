<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head.ejs") %>
    <title>The Mobile Hour - Products Page</title>
</head>

<body>
    <main>
        <%- include("partials/header.ejs") %>
        <%- include("partials/admin_nav.ejs")%>

        <section class="half-half-layout">
            <section class="cols-4 data-list">
                <span class="data-list-heading">Name</span>
                <span class="data-list-heading">Username</span>
                <span class="data-list-heading">Role</span>
                <span></span>
                <% for (let staff of allStaff) { %>
                <span>
                    <%= staff.first_name %>
                    <%= staff.last_name %>
                </span>
                <span>
                    <%= staff.username %>
                </span>
                <span>
                    <%= staff.access_role %>
                </span>
                <a href="/staff_admin?edit_id=<%= staff.id %>" class="button">
                    Edit
                </a>
                <% } %>
            </section>
            <form action="/edit_staff" method="post" class="admin_edit_section">
                <input type="hidden" name="staff_id" value="<%= editStaff.id %> ">

                <label for="first_name">First name:</label>
                <input type="text" name="first_name" id="first-name" value="<%= editStaff.first_name %>">
                
                <label for="last_name">Last Name:</label>
                <input type="text" name="last_name" id="last-name" value="<%= editStaff.last_name %>">
                
                <label for="username">Username:</label>
                <input type="text" name="username" id="username" value="<%= editStaff.username %>">

                <label for="password">Password:</label>
                <input type="text" name="password" id="password" value="<%= editStaff.password %>">

                <label for="access-role">Access Role</label>
                <select name="access_role" id="access-role">
                    <option <%=editStaff.access_role=="manager" ? "selected" : "" %> value="manager">
                        Manager
                    </option>
                    <option <%=editStaff.access_role=="stock" ? "selected" : "" %> value="stock">
                        Stock
                    </option>
                    <option <%=editStaff.access_role=="sales" ? "selected" : "" %> value="sales">
                        Sales
                    </option>
                </select>
                <br>

                <input type="submit" class="button button-2" name="action" value="delete" /><br><br>
                <% if (editStaff.id=="0" ) { %>
                <input type="submit" class="button button-2" name="action" value="create" />
                <% } else { %>
                <input type="submit" class="button button-2" name="action" value="update" />
                <% } %>


            </form>

            </section>

    </main>

    <%- include('partials/footer.ejs') %>
        <!-- Footer -->

</body>

</html>